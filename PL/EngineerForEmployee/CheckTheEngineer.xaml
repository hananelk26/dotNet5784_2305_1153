<Window x:Class="PL.EngineerForEmployee.CheckTheEngineer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.EngineerForEmployee"
        mc:Ignorable="d"
        Title="CheckTheEngineer" Height="200" Width="411" Background ="Bisque" Top="150">
    <Grid >
        <TextBox HorizontalAlignment="Left" Margin="165,61,0,0" TextWrapping="Wrap"  Text="{Binding EmployeeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="193" Height="18" PreviewTextInput="TextBox_PreviewTextInput" />
        <Label Content="Enter your ID" HorizontalAlignment="Left" Margin="206,22,0,0" VerticalAlignment="Top" Height="34" Width="168"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="114,103,0,0" VerticalAlignment="Top" Width="148" Height="43" Click="ContinueButton_Click"/>
    </Grid>
</Window>
